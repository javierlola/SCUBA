                                        <span id="subject"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-format">Message:</td>
                                    <td>
                                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control text-format-input-h" })
                                        @*<textarea name="message" placeholder="Type your message here..." onKeyUp="typing(this.value, 'message');"></textarea>*@
